{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}


{% block body %}

    
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text"  class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Email"/>

        <label for="password">Password:</label>
        <input type="password"  class="form-control" id="password" name="_password" placeholder="Mot de passe"/>

         {# If you want to control the URL the user is redirected to on success #}
        {# <input type="hidden" name="_target_path" value="/account"/>  #}

         <button class="btn btn-lg btn-primary  mt-2" type="submit">login</button>
    </form>
{% endblock %}


 